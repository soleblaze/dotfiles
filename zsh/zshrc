#!/bin/zsh
eval "$(zoxide init zsh)"

# My dotfiles
for i in $HOME/git/dotfiles/zsh/*.zsh; do
  source "$i"
done

if [ -f "$HOME/.zshrc_local" ]; then
  source ~/.zshrc_local
fi

# Plugins that need to be sourced last
ZVM_INIT_MODE=sourcing

source /usr/share/zsh-theme-powerlevel10k/powerlevel10k.zsh-theme
source ~/git/dotfiles/zsh/plugins/autopair.zsh
source ~/git/dotfiles/zsh/plugins/zsh-history-substring-search.zsh

zmodload zsh/terminfo
bindkey "$terminfo[kcuu1]" history-substring-search-up
bindkey "$terminfo[kcud1]" history-substring-search-down
bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

source ~/git/dotfiles/zsh/plugins/you-should-use.plugin.zsh
source ~/git/dotfiles/zsh/plugins/fast-syntax-highlighting.plugin.zsh

if [ $commands[rbenv] ]; then
  eval "$(rbenv init -)"
fi

typeset -U PATH

ZLE_RPROMPT_INDENT=0
[[ ! -f ~/git/dotfiles/zsh/prompt/p10k.zsh ]] || source ~/git/dotfiles/zsh/prompt/p10k.zsh
